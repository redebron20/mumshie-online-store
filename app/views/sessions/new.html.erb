<h1>Login</h1>

<div id="login-form">
    <%= form_with(model: @user, url: "/login") do |f| %>
        <div class="form-control">
            <%= f.label :username, class: "form-label" , class: "form-label" %>
            <%= f.text_field :username, class: "form-input" %>
        </div>
        <div class="form-control">
            <%= f.label :password, class: "form-label" , class: "form-label" %>
            <%= f.password_field :password, class: "form-input" %>
        </div>

        <%= f.submit "Sign in"%>
    <% end %>
    Don't have an account? <%= link_to "Sign up", signup_path, class: "show-signup" %> here.
    
</div>