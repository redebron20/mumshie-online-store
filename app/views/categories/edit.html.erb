
<h1>Edit <%= @category.name%></h1>

<div class="new-form">
    <%= form_with(model: @category) do |f| %>
        <div class="form-input">
            <%= f.label :name %>
            <%= f.text_field :name%>
        </div>
        <div class="form-input">
            <%= f.label :description %>
            <%= f.text_area :description %>
        </div>
        <div class="form-button"><%= f.submit %></div>
    <% end %>
</div>