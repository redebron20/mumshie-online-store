<%= conditional_errors(@product) %>

<div class="new-form">
    <header>
        <h2>Edit product</h2>
    </header>
    <%= form_with(model: @product) do |f| %>
        <%= render partial: 'form', locals: {form: f, product: @product} %>
        <%=  render partial: "nested_category", locals: {f: f, product: @product} %>
        <div class="form-button"><%= f.submit %></div>
    <% end %>
    <div class="form-button"><%= button_to "Delete", product_path(@product), method: :delete, data: {confirm: "Are you sure?"} %> <br>
    <%= link_to "New product", new_product_path %>
</div>