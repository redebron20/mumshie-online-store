<legend>Product</legend>
<%= form.label :name, 'Name' %>
<%= form.text_field :name, placeholder: 'Name'  %>
<%= form.label :description, 'Description' %>
<%= form.text_area :description, cols: 20, rows: 2, placeholder: 'Description'  %>
<%= form.label :price, 'Price' %>
<%= form.number_field :price, min: 0.00, step: 0.01, placeholder: 'Price' %>
<%= form.label :availability %>
<%= form.select :availability, options_for_select([true, false]), include_blank: "Select an availability" %>
