<% if @user.errors.any? %>
  <div class = "fields_with_errors">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being created:</h2>
 
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><em><%= msg %><em></li>
    <% end %>
    </ul>
  </div>
<% end %>

<h1>Signup</h1>

<div id="signup-form" class="hide">
    <%= form_with(model: @user) do |f| %>
        <div class="form-control">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, class: "form-input" %>
        </div>
        <div class="form-control">
            <%= f.label :username, class: "form-label" %>
            <%= f.text_field :username, class: "form-input" %>
        </div>
        <div class="form-control">
            <%= f.label :password, class: "form-label" %>
            <%= f.password_field :password, class: "form-input" %>
        </div>
        <%= f.submit "Sign Up"%>
    <% end %>
    Already have an account? <%= link_to "Log in", login_path, class: "show-login"%> here.
</div>